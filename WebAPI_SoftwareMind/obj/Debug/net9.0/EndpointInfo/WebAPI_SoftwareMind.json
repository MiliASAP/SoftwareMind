          "productId",
          "proposedPrice",
          "status"
        ],
        "type": "object",
        "properties": {
          "negotiationId": {
            "type": "integer",
            "format": "int32"
          },
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "proposedPrice": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "minLength": 1,
            "type": "string"
          },
          "attempts": {
            "type": "integer",
            "format": "int32"
          },
          "expirationDate": {
            "type": "string",
            "format": "date-time"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        },
        "additionalProperties": false
      },
      "NegotiationDTO": {
        "required": [
          "productId",
          "proposedPrice"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "proposedPrice": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "Product": {
        "required": [
          "name",
